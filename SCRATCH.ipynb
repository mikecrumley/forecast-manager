   "source": [
    "def split_into_n_chunks(lst, n):\n",
    "    k, m = divmod(len(lst), n)\n",
    "    return [lst[i * k + min(i, m):(i + 1) * k + min(i + 1, m)] for i in range(n)]\n",
    "\n",
    "lst = list(range(100))\n",
    "chunks = split_into_n_chunks(lst, 13)\n",
    "\n",
    "chunks"
   ],
